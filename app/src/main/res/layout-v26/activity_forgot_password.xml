<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword">

    <TextView
        android:textColor="#000000"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:justificationMode="inter_word"
        android:text="Please enter the email address you signed up with to reset your password."
        android:textSize="15sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="518dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_login_hero" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"

        app:cardBackgroundColor="@color/whiteTextColor"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-thin"
                android:textColor="#000000"
                android:text="Please enter your email"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/EditTextForgotEmail"
                style="@style/modifiedEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"

                android:hint="Please enter your email...."
                android:maxLines="1" />

<!--            <TextView-->
<!--                android:id="@+id/TextViewQuestion"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_centerHorizontal="true"-->
<!--                android:layout_gravity="left"-->
<!--                android:layout_marginBottom="10dp"-->
<!--                android:fontFamily="sans-serif-thin"-->
<!--                android:text="Please Select Your Question"-->
<!--                android:textSize="20dp" />-->

            <Spinner
                android:id="@+id/SpinnerForgotQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center" />

            <EditText
                android:id="@+id/editTextForgotAnswer"
                style="@style/modifiedEditTextColorRed"
                android:layout_marginBottom="5dp"
                android:hint="Please enter you answer here"
                android:inputType="textPersonName"
                android:maxLines="1" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/primaryTextGrayColor"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="20dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/EditTextForgotPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/whiteTextColor"
                        android:hint="Please enter your new password"
                        android:layout_marginBottom="10dp"
                        />

                    <EditText
                        android:id="@+id/EditTextForgotConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/whiteTextColor"
                        android:hint="Confirm Password"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/ButtonForgotButton"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-thin"
                android:text="Done"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>