<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearmenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="378dp"
            android:layout_height="466dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            card_view:cardCornerRadius="15dp"
            card_view:cardElevation="10dp">

            <ImageView
                android:id="@+id/imageviewmenupicture"
                android:layout_width="367.5dp"
                android:layout_height="325dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/frame" />

            <TextView
                android:id="@+id/itemmenuname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="320dp"
                android:gravity="center"
                android:text="Item Name here"
                android:textColor="@color/black"
                android:textSize="35dp" />
            <TextView

                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="380dp"
                android:text="Rs."
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/itemmenuprice"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="380dp"
                android:text="0.00"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/itemmenuingredient"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="420dp"
                android:text="Item Ingredient"
                android:textColor="@color/black"
                android:textSize="18dp" />


            <Button
                android:id="@+id/animationheart"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="389dp"
                android:layout_marginLeft="290dp"
                android:background="@drawable/ic_baseline_favorite_border_24"
                android:backgroundTint="@color/black" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

