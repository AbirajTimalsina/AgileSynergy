<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/register_bk_color"
    tools:context=".ForgotPassword">

    <TextView
        style="@style/viewParent.headerText.NoMode"
        android:layout_alignParentLeft="true"
        android:layout_margin="30dp"
        android:text="Hereâ€™s\nyour first\nstep with \nus! "
        android:textColor="@color/whiteTextColor" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:src="@drawable/ic_login_hero" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"

        app:cardBackgroundColor="@color/whiteTextColor"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-black"
                android:text="Please enter your email"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/EditTextForgotEmail"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                style="@style/modifiedEditText"
                android:layout_width="match_parent"
                android:drawablePadding="30dp"
                android:paddingLeft="20dp"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="Please enter your email"
                android:maxLines="1" />

            <TextView
                android:id="@+id/TextViewQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-black"
                android:text="Please Select Your Question"
                android:textSize="25dp" />

            <Spinner
                android:id="@+id/SpinnerForgotQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center" />

            <EditText
                android:id="@+id/editTextForgotAnswer"
                style="@style/modifiedEditTextColorRed"
                android:layout_marginBottom="5dp"
                android:hint="Please enter you answer here"
                android:inputType="textPersonName"
                android:textSize="20sp"
                android:maxLines="1" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/primaryTextGrayColor"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="20dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/EditTextForgotPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/whiteTextColor"
                        android:hint="Please enter your new password"
                        android:layout_marginBottom="10dp"
                        android:drawableLeft="@drawable/password"
                        android:drawablePadding="20dp"
                        android:paddingLeft="10dp"
                        />

                    <EditText
                        android:id="@+id/EditTextForgotConfirmPassword"
                        android:layout_width="match_parent"
                        android:drawableLeft="@drawable/password"
                        android:drawablePadding="20dp"
                        android:paddingLeft="10dp"
                        android:layout_height="wrap_content"
                        android:background="@color/whiteTextColor"
                        android:hint="Confirm Password"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/ButtonForgotButton"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-black"
                android:text="Done"
                android:background="@drawable/button_background_blue"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>