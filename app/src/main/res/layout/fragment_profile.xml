<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#03DAC5"
    tools:context=".fragments.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imguser"
            android:layout_width="163dp"
            android:layout_height="187dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="-2dp"
            android:layout_marginEnd="234dp"
            android:src="@drawable/user" />

        <ScrollView
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/profile_bg_radius">

            <LinearLayout
                android:id="@+id/box1"
                android:layout_width="203dp"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvfullname"
                    style="@style/pdetails"
                    android:hint="Fullname" />

                <TextView
                    android:id="@+id/tvemail"
                    style="@style/pdetails"
                    android:hint="Email" />

                <TextView
                    android:id="@+id/tvphoneno"
                    style="@style/pdetails"
                    android:hint="Phone no" />

                <TextView
                    android:id="@+id/tvaddress"
                    style="@style/pdetails"
                    android:hint="Address" />

                <TextView
                    android:id="@+id/tvgender"
                    style="@style/pdetails"
                    android:hint="Gender" />
            </LinearLayout>

        </ScrollView>

        <ImageButton
            android:id="@+id/editprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="364dp"
            android:layout_marginTop="240dp"
            android:layout_marginEnd="23dp"
            android:background="@drawable/circle_button"
            android:elevation="8dp"
            android:src="@drawable/ic_baseline_edit_24" />

        <ImageButton
            android:id="@+id/editphoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="156dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="234dp"
            android:background="@drawable/circle_button"
            android:elevation="8dp"
            android:src="@drawable/ic_edit_photo" />

        <Button
            android:id="@+id/btnuppassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="183dp"
            android:layout_marginEnd="222dp"
            android:background="@drawable/button_background_blue"
            android:backgroundTint="#fff"
            android:text="Change Password" />


        <Button
            android:id="@+id/btnlogout"
            android:layout_width="130dp"
            android:layout_height="47dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="241dp"
            android:layout_marginEnd="250dp"
            android:background="@drawable/button_background_blue"
            android:backgroundTint="@color/whiteTextColor"
            android:text="Logout" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="303dp"
            android:layout_marginEnd="-2dp"
            android:background="#fff" />

        <TextView
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="86dp"
            android:layout_marginTop="311dp"
            android:layout_marginEnd="72dp"
            android:text="Purchase History"
            android:textColor="#000"
            android:textSize="25dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="345dp"
            android:layout_marginEnd="1dp"
            android:background="#fff" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/phrecyclehsitory"
            android:layout_width="wrap_content"
            android:layout_height="359dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="373dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="91dp"
            android:background="#fff"
            android:padding="10dp" />
    </RelativeLayout>


</ScrollView>

